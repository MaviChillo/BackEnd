<h2 style="margin-left: 20px; margin-top: 20px">Welcome {{role}}!</h2>
<p style="margin-left: 20px; margin-top: 20px">email: {{email}}</p>

<button style="margin-left: 20px; margin-bottom: 20px" onclick="location.href='/users/logout'">Logout</button>

<h2 style="margin-left: 20px; margin-top: 20px">PRODUCTS</h2>

<h1 style="margin-left: 20px;">Add New Product:</h1>
<br>
<form style="margin-left: 20px; margin-bottom: 20px" action="/api/products" method="post" id="formulario">
    Title: <input type="text" name="title" id="title">
    Description: <input type="text" name="description" id="description">
    Price: <input type="number" name="price" id="price">
    <br>
    <br>
    Stock: <input type="number" name="stock" id="stock">
    Category: <input type="text" name="category" id="category">
    Owner: <input type="text" name="owner" id="owner">
    <br>
    <br>
    <input type="submit" value="Add Product">
</form>

{{#if products}}
{{#each products}}
<div class="card" style="width: 18rem; margin-left: 20px; margin-bottom: 20px">
    <img src={{thumbnail}} class="card-img-top" alt="img">
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{description}}</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: {{price}}</li>
        <li class="list-group-item">Stock: {{stock}}</li>
        <li class="list-group-item">Category: {{category}}</li>
        <button>Edit Product</button>
    </ul>
</div>
{{/each}}
{{else}}
<h2>Product not Found</h2>
{{/if}}

